#!/usr/bin/env bash

CIS_X_HOME=$(realpath $(dirname $0)/..)

COMMAND=$1

usage() {
    echo "Usage: $(basename $0) <refexp|run|seed> [args...]"
    exit 1
}

case $COMMAND in
    refexp) $CIS_X_HOME/src/refexp/bin/cis-X-refexp "${@:2}" ;;
    run) $CIS_X_HOME/src/core/bin/cis-X-run "${@:2}" ;;
    seed) $CIS_X_HOME/src/seed/bin/cis-X-seed "${@:2}" ;;
    *) usage ;;
esac
